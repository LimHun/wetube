extends layouts/main

block content
    .form-container
        form(action=routes.editVideo(video.id), method="post")
            input(type="text", phaceholder="Title", name="title", value=video.title)
            textarea(name="description", placeholder="description")=video.description
            input(type="submit", value="Update Video")
        a.from-container__link.form-container__link--delete(href=routes.deleteVideo(video.id)) Delete Video